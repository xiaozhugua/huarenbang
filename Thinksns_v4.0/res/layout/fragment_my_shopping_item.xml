<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tljr_bj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="积分"
                    android:textColor="@color/default_text" />


                <com.abcs.huaqiaobang.view.RiseNumberTextView
                    android:id="@+id/my_vIntegral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_integral"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="0.00"
                    android:textColor="#fa595c" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_tv_Deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="预存款"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.abcs.huaqiaobang.view.RiseNumberTextView
                    android:id="@+id/my_vDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_tv_Deposit"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="0.00"
                    android:textColor="#fa595c"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_tv_Recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="充值卡"
                    android:textColor="@color/default_text" />

                <com.abcs.huaqiaobang.view.RiseNumberTextView
                    android:id="@+id/my_vRecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_tv_Recharge"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@id/xian"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="#fa595c" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_rl_Recharge"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_Recharge"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/img_jiaoyijilu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_Recharge"
                android:text="充值代金券"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_Recharge"
                android:background="@color/subscribe_seperate_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_modifyPaypwd"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <ImageView
                android:id="@+id/personal_img_modifyPaypwd"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_modifypassword" />


            <TextView
                android:id="@+id/t_modify_paypwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/personal_img_modifyPaypwd"
                android:text="设置支付密码"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/personal_img_modifyPaypwd"
                android:background="@color/subscribe_seperate_line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_cart"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_shoppingcart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_shopping_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_shoppingcart"
                android:text="@string/my_shopping_cart"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_shoppingcart"
                android:background="@color/subscribe_seperate_line" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_rl_order"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_order"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_order"
                android:text="@string/my_shopping_order"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_order"
                android:background="@color/subscribe_seperate_line" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/my_rl_comment"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_comment"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/fankui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_comment"
                android:text="评论/晒单"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_comment"
                android:background="@color/subscribe_seperate_line" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/my_rl_refund"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_refund"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/img_licaizichan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_refund"
                android:text="退货及退款"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_refund"
                android:background="@color/subscribe_seperate_line" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_rl_deliver"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_deliver"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/img_shouhuodizhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_deliver"
                android:text="@string/my_shopping_deliver"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_deliver"
                android:background="@color/subscribe_seperate_line" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_rl_collection"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/click_bj"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_collection"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_collection"
                android:text="@string/my_collection"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gengduo" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>