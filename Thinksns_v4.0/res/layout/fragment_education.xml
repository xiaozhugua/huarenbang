<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hwg_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_gray_no_radius"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <EditText
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/in_yule_search2"
                android:paddingLeft="15dp"
                android:textSize="14sp"
                android:hint="念故事学中文"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_msg"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/edu_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_down"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/edu_messge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/hwg_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <com.abcs.haiwaigou.view.zjzbanner.LMBanners
                    android:id="@+id/banners"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:canLoop="true"
                    app:isVertical="false"
                    app:auto_play="true"
                    app:durtion="5000"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:scroll_duration="1000"
                    app:indicator_select="@drawable/img_hwg_indicator_select"
                    app:indicator_unselect="@drawable/img_hwg_indicator_unselect"
                    app:horizontal_transitionEffect="accordion"
                    app:indicator_position="bottom_mid">

                </com.abcs.haiwaigou.view.zjzbanner.LMBanners>
            </RelativeLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="94dp">

                <LinearLayout
                    android:id="@+id/lin_zhibo"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView

                        android:src="@drawable/edu_zhibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="直播"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_jiaoyu"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView

                        android:src="@drawable/edu_live_ketang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="在线课堂"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_jiaocai"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView

                        android:src="@drawable/edu_zhongwen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="中文教材"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_guanzhu"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView

                        android:src="@drawable/edu_my_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="我的关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="热门直播"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="更多"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyGridView
                    android:id="@+id/gridview_zhibo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />
            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="精彩课堂"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="更多"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyListView
                    android:id="@+id/listview_ketang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />
            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="推荐教材"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="更多"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyListView
                    android:id="@+id/listview_jiaocai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />
            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="名师推荐"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="更多"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyListView
                    android:id="@+id/listview_mingshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>