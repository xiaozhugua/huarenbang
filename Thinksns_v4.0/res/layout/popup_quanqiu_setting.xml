<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:background="@color/transparent"
    >

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:background="@drawable/bg_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left|center_vertical"
            android:id="@+id/line_messge"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="43dp">

            <RelativeLayout
                android:layout_marginRight="5dp"
                android:id="@+id/relat_xx"
                android:layout_width="30dp"
                android:layout_height="30dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="25dp"
                    android:src="@drawable/xiaoxi"
                    android:layout_height="25dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_xiaoxi_num"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/iv_local_red_dian"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />
            </RelativeLayout>

            <TextView
                android:textSize="15sp"
                android:textColor="@color/bg_black"
                android:gravity="center"
                android:text="消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="#dedfe0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/line_cs"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="43dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:background="@drawable/cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/bg_black"
                android:gravity="center"
                android:text="测网速"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="#dedfe0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left|center_vertical"
            android:id="@+id/line_fb"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="43dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:background="@drawable/fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/bg_black"
                android:gravity="center"
                android:text="我的发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>