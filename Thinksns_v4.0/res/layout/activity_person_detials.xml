<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abcs.education.PersonDetialsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/background_dark"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <com.abcs.huaqiaobang.view.CircleImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/logo"
                    android:src="@drawable/default_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp" />


                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="亲自攻读浮世绘"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="23人关注 | 13个节目"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rel_chat"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:background="@drawable/btn_chat_send"
                    android:layout_width="80dp"
                    android:layout_height="30dp">

                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/edu_msg"
                        android:drawablePadding="5dp"
                        android:layout_centerInParent="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="聊天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_guanzhu"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/rel_chat"
                    android:background="@drawable/btn_chat_send"
                    android:layout_width="80dp"
                    android:layout_height="30dp">

                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/edu_guanzhu_defa"
                        android:drawablePadding="5dp"
                        android:layout_centerInParent="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注23人关注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/lightBg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="全部节目（25）"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/back"
                android:text="返回"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/edu_share_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
