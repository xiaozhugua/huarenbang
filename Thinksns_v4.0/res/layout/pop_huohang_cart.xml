<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@color/transparent_black_40"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:background="@color/hwg_bg"
        android:layout_height="210dp">

        <RelativeLayout
            android:background="@color/tljr_bjtitle"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:drawableLeft="@drawable/huohang_cart_juxing"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:textColor="@color/smallFont"
                android:text="已选商品"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@+id/rel_close"
                android:id="@+id/tv_clear_all"
                android:paddingRight="15dp"
                android:drawableLeft="@drawable/huohang_cart_delete_all"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:textColor="@color/smallFont"
                android:text="清空"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/rel_close"
                android:layout_alignParentRight="true"
                android:layout_width="35dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/edu_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

        </RelativeLayout>

        <ListView
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:layout_weight="1"
            android:id="@+id/listview_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"></ListView>

        <TextView
            android:background="@color/tljr_bjtitle"
            android:layout_gravity="center"
            android:textColor="@color/smallFont"
            android:text="如有特殊需求，请在结算时留言"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>