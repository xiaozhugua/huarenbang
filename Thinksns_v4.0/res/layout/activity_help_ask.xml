<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj">

        <include
            android:id="@+id/tljr_per_btn_lfanhui"
            layout="@layout/tljr_view_back" />

        <TextView
            android:id="@+id/tljr_per_txt_ltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="帮助咨询"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/my_rl_Access"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:background="@drawable/tljr_click"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_zhanghuwenti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_women"
                android:text="账户问题"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="33dp"
                android:src="@drawable/gengduo" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />

        <RelativeLayout
            android:id="@+id/my_rl_jiaoyi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/tljr_click"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_jiaoyiwenti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_help"
                android:text="交易问题"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="33dp"
                android:src="@drawable/gengduo" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />

        <RelativeLayout
            android:id="@+id/my_rl_network"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/tljr_click"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_img_yijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/my_img_wangluowenti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/more_img_yijian"
                android:text="网络问题"
                android:textColor="@color/default_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="33dp"
                android:src="@drawable/gengduo" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_service_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="客服电话：0755-33563266"
        android:textColor="@color/tljr_text_default" />

    <TextView
        android:id="@+id/tv_call_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_service_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="【联系我们】"
        android:textColor="@color/tljr_text_default" />

    <TextView
        android:id="@+id/tv_wecatNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_call_me"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="微信公众号：华人邦"
        android:textColor="@color/tljr_text_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_wecatNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="更多信息，请关注:"
        android:textColor="@color/tljr_text_default" />

</RelativeLayout>
