<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:background="?attr/TitleBGColor"
        android:layout_width="match_parent"
        android:id="@+id/statusbar"
        android:visibility="gone"
        android:layout_height="25dp"></View>
    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_below="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBGColor">

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物帮"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize"/>
        <RelativeLayout
            android:id="@+id/relative_search"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent"
            android:background="@drawable/tljr_click"
            >
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_main_search"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/tljr_click"
            android:id="@+id/relative_cart"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_hwg_cart" />

            <TextView
                android:id="@+id/car_num"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/img_xiaoxitishi"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/linear_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/main_tabs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                app:pstsDividerColor="@color/white"
                app:pstsTabPaddingLeftRight="10dp"
                app:pstsIndicatorColor="@color/colorPrimaryDark"
                app:pstsIndicatorHeight="4dp"
                app:pstsShouldExpand="true"
                app:pstsUnderlineColor="@color/white">

            </com.astuetz.PagerSlidingTabStrip>
        </LinearLayout>

        <View
            android:id="@+id/seperate_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear_tab"
            android:background="@color/subscribe_seperate_line" />

        <android.support.v4.view.ViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_tab" />
    </LinearLayout>

    <TextView
        android:id="@+id/t_refresh"
        android:visibility="gone"
        android:textColor="@color/hwg_text2"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/img_hwg_kuang_dark"
        android:text="点击刷新"
        android:layout_width="90dp"
        android:layout_height="40dp" />

</RelativeLayout>