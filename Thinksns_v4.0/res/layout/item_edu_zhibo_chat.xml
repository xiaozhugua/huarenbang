<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/hwg_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.abcs.huaqiaobang.view.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_margin="10dp"
            android:src="@drawable/default_error"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:id="@+id/tv_name"
            android:text="于德旺"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_time"
            android:text="12:12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:id="@+id/tv_content"
            android:text="刚醒阿刚醒阿里就详细在刚醒阿刚醒阿里就详细在刚醒阿里就详细在刚醒阿里就详细在里就详细在刚醒阿刚醒阿里就详细在刚醒阿里就详细在刚醒阿里就详细在里就详细在刚醒阿刚醒阿里就详细在刚醒阿里就详细在刚醒阿里就详细在里就详细在刚醒阿里就详细在刚醒阿里就详细在里就详细在"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:id="@+id/line"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_content"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>


    </RelativeLayout>
</LinearLayout>