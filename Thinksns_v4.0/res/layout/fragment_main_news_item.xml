<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tljr_grp_symore"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:background="@color/tljr_white">

        <ImageView
            android:id="@+id/tljr_huangtiao"
            android:layout_width="4dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_redianxinwenicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tljr_huangtiao"
            android:text="热点新闻"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tljr_txt_symore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:text="更多价值新闻"
                android:textColor="@color/tljr_text_tishi"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tljr_txt_symore"
                android:scaleType="fitXY"
                android:src="@drawable/img_gengduojiantou" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_222fengexian" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tljr_news_important"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tljr_white"
        android:orientation="vertical" />

</LinearLayout>