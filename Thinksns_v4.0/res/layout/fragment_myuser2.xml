<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hwgbg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_msg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/img_hwg_my_background">

                <RelativeLayout
                    android:id="@+id/relative_top"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/TitleHeight">

                    <RelativeLayout
                        android:id="@+id/rl_back"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/tljr_click"

                        android:clickable="true"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="?attr/BackIcon" />
                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/relative_top"
                    android:id="@+id/relative_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/my_hearbj" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_hwg_my_nologin" />

                    <TextView
                        android:id="@+id/tv_VipLever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_alignRight="@+id/imageView"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/img_yuandian"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="V1"
                        android:textColor="@color/yellow01"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:text=""
                    android:id="@+id/my_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_head"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_vips"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/img_vip_huiyuans"
                    android:layout_below="@+id/my_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"/>

                <TextView
                    android:text=""
                    android:id="@+id/my_userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_vips"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/translucent01"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/t_huati_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/t_huati"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_huati_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="话题"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/t_activity_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/t_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_activity_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="活动"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/t_club_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/t_club"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_club_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="俱乐部"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/t_friends_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/t_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_friends_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="好友"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <LinearLayout
            android:id="@+id/linear_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:id="@+id/linear_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.astuetz.PagerSlidingTabStrip
                    android:id="@+id/user_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:pstsDividerColor="@color/subscribe_seperate_line"
                    app:pstsIndicatorColor="@color/colorPrimaryDark"
                    app:pstsIndicatorHeight="4dp"
                    app:pstsShouldExpand="true"
                    app:pstsTabPaddingLeftRight="10dp"
                    app:pstsUnderlineColor="@color/white">

                </com.astuetz.PagerSlidingTabStrip>
            </LinearLayout>

            <View
                android:id="@+id/seperate_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/subscribe_seperate_line" />

            <android.support.v4.view.ViewPager
                android:id="@+id/user_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_tab" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/TitleHeight"
        >

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="?attr/TitleTextSize"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_settings2"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/tljr_click">

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_hwg_setting_white" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>