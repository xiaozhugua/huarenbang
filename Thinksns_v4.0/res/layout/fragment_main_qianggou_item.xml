<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_qianggou"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:id="@+id/img_qiang1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_huaqiao_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/countdown_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/tljr_statusbarcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="å¤©"
                    android:textColor="@color/tljr_statusbarcolor" />

                <TextView
                    android:id="@+id/countdown_hour"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/countdown_shape"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/hour"
                    android:text=":"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/countdown_minute"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/countdown_shape"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/hour"
                    android:text=":"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/countdown_second"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/countdown_shape"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/subscribe_seperate_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_qiang2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/img_huaqiao_default" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/subscribe_seperate_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_qiang3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/img_huaqiao_default" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/subscribe_seperate_line" />

                <ImageView
                    android:id="@+id/img_qiang4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/img_huaqiao_default" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/subscribe_seperate_line" />
</LinearLayout>