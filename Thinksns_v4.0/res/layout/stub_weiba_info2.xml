<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_height="150dp"
    android:background="@drawable/weiba_item_bg"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:id="@+id/ll_weiba_info2"
    android:layout_width="match_parent"
   >
    <RelativeLayout
        android:id="@+id/rela"
        android:background="@drawable/roundbackground_yellow_digg2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_width="61dp"
        android:layout_height="61dp">
        <ImageView
            android:layout_margin="1dp"
           android:layout_centerInParent="true"
            android:id="@+id/img_weiba_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
           />
    </RelativeLayout>


    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/tv_weiba_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/more_option"
        android:layout_toRightOf="@id/rela"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="莫海鸥"
        android:textColor="#f4c76c"
        android:textSize="@dimen/size_big"/>
    <TextView
        android:visibility="gone"
        android:padding="2dp"
        android:layout_below="@+id/tv_weiba_name"
        android:layout_marginTop="3dp"
        android:id="@+id/tv_weiba_name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/rela"
        android:background="@drawable/roundbackground_yellow_digg"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="莫海鸥"
        android:textColor="#f4c76c"
        android:textSize="@dimen/size_middle"/>

    <TextView
        android:layout_below="@+id/tv_weiba_name_tag"
        android:id="@+id/tv_weiba_des"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_weiba_name"
        android:layout_alignRight="@id/tv_weiba_name"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="4"
        tools:text="    来来自来自来自来自来来来自来自来自来自来自来自来自来自来自来自自来来自来自来自来自来自来自来自来自来自来自自来来自来自来自来自来自来自来自来自来自来自自来来自来自来自来自来自来自来自来自来自来自自自来自来自来自来自来自自"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/size_middle"/>

    <FrameLayout
        android:id="@+id/more_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/btn_attention"
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:background="@drawable/roundbackground_green_digg"
            android:text="+关注"
            android:textSize="10sp"
            android:textColor="@color/white"
           />

    </FrameLayout>
</RelativeLayout>
    <View
        android:layout_below="@+id/ll_weiba_info2"
        android:background="#f4c76c"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>
