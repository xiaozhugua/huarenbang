<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/tljr_img_qdbj"
        android:layout_width="fill_parent"
        android:layout_above="@+id/tljr_grp_qd"
        android:layout_height="match_parent"
        android:pivotX="50%"
        android:pivotY="50%"
        android:scaleType="fitXY"
        android:src="@drawable/img_hwg_qidong" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/tljr_grp_qd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/tljr_bj"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tljr_pro_qd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/barbj" />

        <TextView
            android:id="@+id/tljr_txt_jindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tljr_pro_qd"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:text="初始化数据"
            android:textColor="@color/tljr_text_shense"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_huaqiaolicailogo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tljr_txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:textColor="@color/tljr_text_shense"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tljr_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tljr_txt_jindu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/tljr_text_shense"
            android:textSize="12sp" />

        <!--
         <ProgressBar
        android:id="@+id/tljr_pro_qd"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:progressDrawable="@drawable/barbj" />
        -->
    </LinearLayout>

</RelativeLayout>