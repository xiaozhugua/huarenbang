<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    android:background="@color/tljr_white"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_222fengexian" />

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/tljr_c_red" />

    <ImageView
        android:layout_width="42.5dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:src="@drawable/img_hongbao" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离下次抢红包开始还有"
            android:textColor="@color/tljr_text_default"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/img_daojishikuai"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/tljr_white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/img_daojishikuai"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/tljr_white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@drawable/img_daojishifenhao" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/img_daojishikuai"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/tljr_white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/img_daojishikuai"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/tljr_white"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_fengtiao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="15dp"
        android:rotation="45"
        android:text="最高收益10%"
        android:textColor="@color/tljr_white"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_222fengexian" />
</RelativeLayout>