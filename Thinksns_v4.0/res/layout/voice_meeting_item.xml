<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/list_item_selector"
    android:gravity="center_vertical"
    android:minHeight="60.0dip"
    android:orientation="horizontal"
    android:paddingBottom="4.0dip"
    android:paddingLeft="4.0dip"
    android:paddingRight="4.0dip"
    android:paddingTop="4.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5.0dip"
        android:paddingRight="3.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chatroom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="140.0dip"
                android:paddingLeft="20.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16.0dip"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chatroom_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:paddingLeft="19.0dip"
                android:singleLine="true"
                android:text="@string/str_chatroom_list_join_unfull"
                android:textColor="#999999"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="2.0dip"
        android:src="@drawable/lock_closed"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goto_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/go"
        android:gravity="right"
        android:paddingRight="9.0dip"
        android:textSize="14.0dip" />

</LinearLayout>