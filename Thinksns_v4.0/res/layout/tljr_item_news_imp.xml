<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tljr_listview_selector"
    android:paddingTop="2.0dip">

    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:id="@+id/img_picture_hqss_rela"
        android:layout_width="100.0dip"
        android:layout_height="83.0dip"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/imp_news_picture"
            android:layout_width="100.0dip"
            android:layout_height="83.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_huaqiao_default" />

        <TextView
            android:id="@+id/imp_news_date"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_hongdi"
            android:gravity="center"
            android:text="07月09日"
            android:textColor="@color/tljr_white"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="0.0dip"
        android:layout_height="6.0dip"
        android:layout_below="@+id/img_picture_hqss_rela"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/imp_hqss_news_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_picture_hqss_rela"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_toRightOf="@+id/img_picture_hqss_rela"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:text="第四届中国财经峰会举行 聚焦新常态 "
        android:textColor="@color/tljr_text_default2"
        android:textSize="16.0sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary"
        android:layout_marginLeft="8.0dip"
        android:layout_toRightOf="@+id/img_picture_hqss_rela">


        <LinearLayout
            android:id="@+id/ly_hqss_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imp_hqss_news_title"
        android:layout_below="@+id/imp_hqss_news_title"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="4dp"
        android:lines="2"
        android:text="TextView"
        android:textColor="@color/gray_light"

        android:textSize="13sp" />

    <TextView
        android:id="@+id/imp_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_summary"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="12.0dip"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="5天前"
        android:textColor="#ffaaaaaa"
        android:textSize="12.0sp" />


    <ImageView
        android:layout_marginRight="12dp"
        android:id="@+id/iv_imp_news_isRead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imp_news_time"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_yipiyue"
        android:visibility="invisible" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/subscribe_seperate_line"
        />
</RelativeLayout>