<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    >
    <LinearLayout
        android:gravity="center"
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_goods_icon"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            >


            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/img_goods_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_chanpin1" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_xianshi"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_xianshi"/>
        </RelativeLayout>


        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/t_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="Estee Lauder雅诗兰黛红石榴 鲜亮幻彩泡沫洁面乳 125ml"
            android:textColor="@color/hwg_text2"
            android:textSize="15sp" />


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:id="@+id/linear_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear_count"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <TextView
                android:textSize="13sp"
                android:padding="1dp"
                android:visibility="gone"
                android:id="@+id/t_desc"
                android:textColor="@color/tljr_statusbarcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时价："/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/t_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥312.00"
                android:textColor="@color/tljr_statusbarcolor"
                android:textSize="15sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/t_y_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥312.00"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:textColor="@color/hwg_text2"
                android:textSize="12sp" />


            <ImageView
                android:padding="4dp"
                android:id="@+id/img_buy"
                android:layout_marginRight="8dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/img_hwg_item_buy"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear_count"
            android:orientation="horizontal">


            <TextView
                android:visibility="gone"
                android:id="@+id/t_goods_oldmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥499.00"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>