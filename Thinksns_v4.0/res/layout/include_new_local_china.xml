<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linear_china"
    android:visibility="gone"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <LinearLayout
            android:background="@drawable/mainclick_selector"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:id="@+id/linear_change_china"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tv_city_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="国内"
                android:textColor="@color/local_text_left"
                />



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_search_china"
            android:padding="7dp"
            android:background="@drawable/iv_local_bg_round"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/iv_local_ss"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="目的地/吃喝/购物"
                android:textColor="@color/text_local_title"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/mainclick_selector"
            android:id="@+id/lin_setting_china"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="40dp"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/setting_china"
                android:layout_width="25dp"
                android:src="@drawable/cl"
                android:layout_height="25dp"  />
        </LinearLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"></View>

    <ListView
        android:layout_marginTop="43dp"
        android:paddingTop="5dp"
        android:divider="@null"
        android:scrollbars="none"
        android:id="@+id/listview_zhenxuan"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>