<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent"
              >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linner_tedian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/liner_huiyuantedian"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_v" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="会员特权"
                android:textColor="@color/hwg_text1"
                android:textSize="15sp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:src="@drawable/img_to_heika"
                android:layout_width="wrap_content"
                android:layout_height="23dp"/>

        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_marginBottom="9dp"
            android:background="#ececec"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <com.abcs.hqbtravel.wedgt.MyGridView
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/linner_tedian_datas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.abcs.hqbtravel.wedgt.MyGridView>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#eff2f7"
            android:layout_width="match_parent"
            android:layout_height="5dp" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:textSize="20sp"
        android:id="@+id/tv_null"
        android:layout_centerInParent="true"
        android:text="抱歉，暂无数据！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>