<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/pop_linear"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/hwg_shape_chongzhi"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="华侨卡充值"
            android:textColor="@color/hwg_text1"
            android:textSize="16sp" />

        <EditText
            android:inputType="text"
            android:digits="@string/type_limit"
            android:singleLine="true"
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="请输入华侨卡密码"
            android:textColor="@color/hwg_text2"
            android:textColorHint="@color/hwg_text3"
            android:textCursorDrawable="@drawable/edittextcursor"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_cancel"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tljr_click"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/hwg_text2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/subscribe_seperate_line" />

            <TextView
                android:id="@+id/t_exchange"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tljr_click"
                android:gravity="center"
                android:text="立即兑换"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>