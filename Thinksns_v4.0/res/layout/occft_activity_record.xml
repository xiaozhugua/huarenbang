<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tljr_grp_regiest_title"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj" >

        <include
            android:id="@+id/tljr_img_regiest_back"
            layout="@layout/tljr_view_back" />

        <TextView
            android:id="@+id/tljr_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/record"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/record_edit_form"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img_shijiankuang"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:text="2015-08-01"
            android:textColor="@color/tljr_text_default"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="-" />

        <TextView
            android:id="@+id/record_edit_to"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img_shijiankuang"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:text="2015-10-26"
            android:textColor="@color/tljr_text_default"
            android:textSize="14sp" >
        </TextView>

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img_queding"
            android:text="@string/record_ok"
            android:textColor="@color/tljr_white" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/img_222fengexian" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/week"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/cb_date"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/record_week"
            android:textColor="@color/tljr_txt_check"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/month"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cb_date"
            android:button="@null"
            android:gravity="center"
            android:text="@string/record_month"
            android:textColor="@color/tljr_txt_check"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/threemonth"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cb_date"
            android:button="@null"
            android:gravity="center"
            android:text="@string/record_threemonth"
            android:textColor="@color/tljr_txt_check"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/img_222fengexian" />

    <ListView
        android:id="@+id/record_lv"
        android:layout_width="match_parent"
        android:dividerHeight="0dp"
        android:divider="@color/tljr_transparent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>