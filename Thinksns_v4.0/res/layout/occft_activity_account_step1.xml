<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tljr_bj" >

    <RelativeLayout
        android:id="@+id/account_title"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/account"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize" />

        <include
            android:id="@+id/account_btn_back"
            layout="@layout/tljr_view_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_title"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:background="@drawable/img_shuxian2" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_shuxian1" />

            <CheckBox
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cb_yuandian"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/tljr_white"
                android:textSize="10sp" />

            <CheckBox
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:background="@drawable/cb_yuandian"
                android:button="@null"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/tljr_white"
                android:textSize="10sp" />

            <CheckBox
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/cb_yuandian"
                android:button="@null"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/tljr_white"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/account_step1"
                android:textColor="@color/c_red_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/account_step2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/account_step3"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/img_222fengexian" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tljr_white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/acount_step1_name"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/account_step1_name"
                        android:textColor="@color/tljr_text_default"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/acount_step1_edit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/acount_step1_name"
                        android:background="@color/tljr_transparent"
                        android:ems="10"
                        android:hint="@string/account_step1_name_hint"
                        android:inputType="textPersonName"
                        android:textColor="@color/tljr_text_default"
                        android:textColorHint="@color/tljr_text_tishi"
                        android:textSize="16sp" />
                        <requestFocus android:layout_width="wrap_content" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/img_222fengexian" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/acount_step1_card"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/account_step1_card"
                        android:textColor="@color/tljr_text_default"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/acount_step1_edit_cardno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/acount_step1_card"
                        android:background="@color/tljr_transparent"
                        android:ems="10"
                        android:maxLength="18"
                        android:hint="@string/account_step1_card_hint"
                        android:digits="0123456789xX"
                        android:textColor="@color/tljr_text_default"
                        android:textColorHint="@color/tljr_text_tishi"
                        android:textSize="16sp" >
                    </EditText>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/img_222fengexian" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/acount_step1_phone"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/account_step1_phone"
                        android:textColor="@color/tljr_text_default"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/acount_step1_edit_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/acount_step1_phone"
                        android:background="@color/tljr_transparent"
                        android:ems="10"
                        android:maxLength="11"
                        android:hint="@string/account_step1_phone_hint"
                        android:inputType="phone"
                        android:textColor="@color/tljr_text_default"
                        android:textColorHint="@color/tljr_text_tishi"
                        android:textSize="16sp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/img_222fengexian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp" >

            <CheckBox
                android:id="@+id/acount_step1_cb"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/checkbox"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_step1_agree"
                android:textColor="@color/tljr_text_tishi"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/acount_step1_txt_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_step1_protocol"
                android:textColor="@color/tljr_text_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/acount_step1_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/img_yuananniu1"
            android:text="下一步"
            android:textColor="@color/tljr_white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>