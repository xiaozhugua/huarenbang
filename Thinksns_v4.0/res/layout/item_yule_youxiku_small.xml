<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/mainclick_selector"
        android:id="@+id/rela_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_logo"
            android:layout_margin="10dp"
            android:src="@drawable/iv_yule_jian"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="14sp"
            android:id="@+id/tv_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="神庙逃亡2" />
        <TextView
            android:drawableLeft="@drawable/iv_yule_huati"
            android:drawablePadding="2dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:id="@+id/tv_huati"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12万话题" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/iv_yule_wanjia"
            android:drawablePadding="2dp"
            android:layout_toRightOf="@+id/tv_huati"
            android:textSize="12sp"
            android:id="@+id/tv_wanjia"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="234玩家" />
        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="14sp"
            android:id="@+id/tv_des"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="爽快的跑酷享受" />

        <RelativeLayout
            android:id="@+id/retil_all"
            android:background="@drawable/bg_btn_gray2"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="26dp">
            <TextView

                android:layout_centerInParent="true"
                android:textColor="@color/gray"
                android:gravity="center"
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>


</LinearLayout>