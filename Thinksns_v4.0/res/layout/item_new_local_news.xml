<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_news"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/relative_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/img_logo"
                android:layout_width="120dp"
                android:layout_height="80dp" />
        </RelativeLayout>

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/relative_right"
            android:id="@+id/tv_title"
            android:maxLines="2"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="宽宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松宽松松"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_from"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="来源：天天快报"
            android:textSize="14sp"
            android:textColor="@color/smallFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_from"
            android:text="1小时前"
            android:textSize="14sp"
            android:textColor="@color/smallFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/liner_gga"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.abcs.haiwaigou.view.MyGridView
            android:padding="5dp"
            android:id="@+id/gridview_gg"
            android:numColumns="2"
            android:background="@color/hwg_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.abcs.haiwaigou.view.MyGridView>

