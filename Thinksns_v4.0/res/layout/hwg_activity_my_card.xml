            <RelativeLayout
                android:id="@+id/relative_bank"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/click_bj"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_bank"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/img_hwg_bank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_bank"
                    android:text="我的银行卡"
                    android:textColor="@color/hwg_text2"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_hwg_gd" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_cz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_hwg_card_chongzhi" />

                    <TextView
                        android:id="@+id/t_cz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_cz"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="充值中心"
                        android:textColor="@color/hwg_text1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_cz"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:text="安全保障"
                        android:textColor="@color/hwg_text3"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hwg_bg" />

                <RelativeLayout
                    android:id="@+id/relative_cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_hwg_card_tixian" />

                    <TextView
                        android:id="@+id/t_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_tx"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="预存款提现"
                        android:textColor="@color/hwg_text1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_tx"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:text="极速到账"
                        android:textColor="@color/hwg_text3"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hwg_bg" />

                <RelativeLayout
                    android:id="@+id/relative_exchange"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_zf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_hwg_card_jifen" />

                    <TextView
                        android:id="@+id/t_zf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_zf"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="积分中心"
                        android:textColor="@color/hwg_text1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_zf"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:text="兑换好礼"
                        android:textColor="@color/hwg_text3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_hwg_card_new" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_yh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_hwg_card_youhui" />

                    <TextView
                        android:id="@+id/t_vouncher_num"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right|top"
                        android:background="@drawable/img_yuandian"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:id="@+id/t_yh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_yh"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="我的优惠券"
                        android:textColor="@color/hwg_text1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_yh"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:text="满减优惠"
                        android:textColor="@color/hwg_text3"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hwg_bg" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:visibility="invisible"></RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hwg_bg" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:visibility="invisible"></RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
