<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abcs.haiwaigou.activity.MyCardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hwg_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@drawable/img_hwg_maycard_bg"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/relative_title"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/TitleHeight">

                    <RelativeLayout
                        android:id="@+id/relative_back"
                        android:layout_width="?attr/TitleHeight"
                        android:layout_height="?attr/TitleHeight"
                        android:background="@drawable/tljr_click">

                        <include layout="@layout/tljr_view_back" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我的卡包"
                        android:textColor="@color/white"
                        android:textSize="?attr/TitleTextSize" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relative_zong"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linear_bottom"
                    android:layout_below="@+id/relative_title"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="true">

                    <com.abcs.huaqiaobang.view.RiseNumberTextView
                        android:id="@+id/t_zong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:duplicateParentState="true"
                        android:text="0.00"
                        android:textColor="@drawable/text_selected"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_zong"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:duplicateParentState="true"
                        android:text="总资产"
                        android:textColor="@drawable/text_selected"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/relative_chongzhi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <com.abcs.huaqiaobang.view.RiseNumberTextView
                            android:id="@+id/t_chongzhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:duplicateParentState="true"
                            android:text="0.00"
                            android:textColor="@drawable/text_selected"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_chongzhi"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:duplicateParentState="true"
                            android:text="充值卡"
                            android:textColor="@drawable/text_selected"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_hwg_card_fenge" />

                    <RelativeLayout
                        android:id="@+id/relative_yucun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <com.abcs.huaqiaobang.view.RiseNumberTextView
                            android:id="@+id/t_yucun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:duplicateParentState="true"
                            android:text="0.00"
                            android:textColor="@drawable/text_selected"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_yucun"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:duplicateParentState="true"
                            android:text="预存款"
                            android:textColor="@drawable/text_selected"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_hwg_card_fenge" />

                    <RelativeLayout
                        android:id="@+id/relative_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <com.abcs.huaqiaobang.view.RiseNumberTextView
                            android:id="@+id/t_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:duplicateParentState="true"
                            android:text="0"
                            android:textColor="@drawable/text_selected"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t_point"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:duplicateParentState="true"
                            android:text="积分"
                            android:textColor="@drawable/text_selected"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


