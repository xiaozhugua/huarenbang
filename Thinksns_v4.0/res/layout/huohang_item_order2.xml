<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/hwg_text2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/t_refund_return"
            android:id="@+id/t_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X1" />

        <ImageView
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:id="@+id/img_logo"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_logo"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="18sp"
                android:textColor="@color/bg_gray_deep"
                android:text="天赐饭店"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_logo" />
            <TextView
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:id="@+id/tv_en_title"
                android:textSize="14sp"
                android:textColor="@color/gray07"
                tools:text="tistianycasas"
                android:layout_width="190dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"
                android:id="@+id/tv_store"
                android:textColor="@color/gray07"
                android:text="货号20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_price"
                    tools:text="单价"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_price"
                    android:id="@+id/tv_sui"
                    tools:text="单价"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/img_logo"
            android:id="@+id/liner_tag"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_tianjai"
            android:visibility="gone"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:visibility="gone"
                android:id="@+id/ivGoodsMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/img_item_jian"/>

            <TextView
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/tvGoodsSelectNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/ivGoodsAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/img_item_jia"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/img_logo"
        android:id="@+id/liner_hdong"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</LinearLayout>
