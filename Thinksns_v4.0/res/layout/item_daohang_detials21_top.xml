<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">


        <ImageView
            android:id="@+id/img_logo"
            android:src="@drawable/img_huaqiao_default"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name_cn"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/bg_white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/name_cn"
            android:id="@+id/name_en"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/play"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name_en"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/play2_yuyin"
                android:layout_width="33dp"
                android:layout_height="33dp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/back"
            android:layout_margin="15dp"
            android:src="@drawable/back2_yuyin"
            android:scaleType="centerCrop"
            android:layout_width="35dp"
            android:layout_height="25dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/liner_yuyin_num"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:background="@color/bg_gray_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_yuyin_numbers"
            android:gravity="center"
            android:text=""
            android:textColor="@color/bg_gray_deep"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/bg_gray_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />

    </LinearLayout>
</LinearLayout>
