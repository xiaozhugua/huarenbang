<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/img_logo"
                android:layout_alignParentRight="true"
                android:id="@+id/img_bofang"
                android:src="@drawable/img_bofang"
                android:scaleType="fitCenter"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_below="@+id/img_logo"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_title"
                android:gravity="center"
                android:text="中亚那个咖啡馆"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/ret"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rew"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_yueduliang"
                    android:layout_width="20dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_toRightOf="@+id/rew"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_youji_numbers"
                    android:layout_marginLeft="10dp"
                    android:text="ddddd"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_logo"
                android:src="@drawable/img_huaqiaobang"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
