<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/hwg_bg"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_margin="10dp"
        android:text="玩了一个卡关的梦想"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_title"
        android:id="@+id/tv_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想玩了一个卡关的梦想"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/gridview"
        android:numColumns="4"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:layout_below="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></GridView>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/gridview"
        android:id="@+id/tv_name"
        android:text="KD。螺帽"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/gridview"
        android:id="@+id/tv_time"
        android:text="刚刚"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/iv_yule_huati3"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/gridview"
        android:id="@+id/tv_huati"
        android:text="123"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@+id/tv_huati"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:drawableLeft="@drawable/iv_yule_dianzan"
        android:drawablePadding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/gridview"
        android:id="@+id/tv_zan_num"
        android:text="123"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentTop="true"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <View
        android:layout_alignParentRight="true"
        android:background="@color/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"></View>
    <View
        android:layout_alignParentLeft="true"
        android:background="@color/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"></View>

</RelativeLayout>