<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_gray">

    <RelativeLayout
        android:id="@+id/liner_huiyuantedian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/tyt"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_closees" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_compelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tyt"
            android:layout_centerHorizontal="true"
            android:text="正在测速，请稍等..."
            android:textColor="@color/hwg_text1"
            android:textSize="18sp" />

        <ListView
            android:divider="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/tv_compelete"
            android:id="@+id/listview_cesu"
            android:scrollbars="none"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>



    </RelativeLayout>

</RelativeLayout>