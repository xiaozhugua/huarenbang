<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/img_kaixuanmen"
        android:orientation="horizontal">


        <android.support.v4.view.ViewPager
            android:id="@+id/tljr_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/TitleHeight"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="77dp"
                android:layout_height="59dp"
                android:src="@drawable/img_logo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/fragment_my_msg1"
                android:textColor="@color/tljr_white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/main_img_login"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tljr_viewGroup"
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_alignBottom="@+id/tljr_viewpager"
            android:gravity="center"
            android:orientation="horizontal" />


    </RelativeLayout>

</LinearLayout>