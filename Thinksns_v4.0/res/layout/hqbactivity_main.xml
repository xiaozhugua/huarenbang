<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/main_bottom_navigation"
        android:background="@color/subscribe_seperate_line" />

    <RadioGroup
        android:id="@+id/main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my_navigation_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="发现"
            android:textColor="@drawable/main_text_selected"
            android:textSize="@dimen/margin_size12"/>

        <RadioButton
            android:id="@+id/fragment_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_navigation_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="首页"
            android:textColor="@drawable/main_text_selected"
            android:textSize="@dimen/margin_size12"/>

        <RadioButton
            android:id="@+id/fragment_shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/shopping_navigation_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="海外购"
            android:textColor="@drawable/main_text_selected"
            android:textSize="@dimen/margin_size12"/>



          <RadioButton
            android:id="@+id/fragment_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/news_navigation_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="新闻"
            android:textColor="@drawable/main_text_selected"
              android:textSize="@dimen/margin_size12"/>


        <!--<RadioButton-->
            <!--android:id="@+id/fragment_shequ"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:button="@null"-->
            <!--android:drawableTop="@drawable/shequ_navigation_selector"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingTop="8dp"-->
            <!--android:text="社区"-->
            <!--android:textColor="@color/default_text" />-->

        <RadioButton
            android:id="@+id/fragment_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my_navigation_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="我的"
            android:textColor="@drawable/main_text_selected"
            android:textSize="@dimen/margin_size12"/>




    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="4" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4">

            <ImageView
                android:id="@+id/notice_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="35dp"
                android:src="@drawable/unread_count_bg"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>