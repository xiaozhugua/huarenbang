<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:padding="5dp"
    android:layout_height="60dp">
<ImageView
    android:layout_centerVertical="true"
    android:id="@+id/img_daohang_de_pic"
    android:src="@drawable/img_huaqiaobang"
    android:scaleType="centerCrop"
    android:layout_width="50dp"
    android:layout_height="50dp" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_daohang_de_pic"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:id="@+id/tv_daohang_de_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_daohang_de_pic"
        android:layout_below="@+id/tv_daohang_de_title"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_daohang_de_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
