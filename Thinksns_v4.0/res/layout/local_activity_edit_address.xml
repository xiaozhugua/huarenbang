<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tljr_statusbarcolor">
    <RelativeLayout
        android:id="@+id/tljr_grp_goods_title"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/tljr_txt_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="收货地址"
            android:textColor="@color/red"
            android:textSize="?attr/TitleTextSize" />



        <RelativeLayout
            android:id="@+id/relative_back"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tljr_click">

            <include
                android:id="@+id/tljr_img_news_back"
                layout="@layout/hqb_view_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/t_ok"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/tljr_click"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/tljr_grp_goods_title"
        android:scrollbars="none"
        android:background="@color/tljr_bj"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


      <LinearLayout
          android:paddingLeft="10dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">

          <TextView
              android:gravity="center"
              android:textColor="@color/red"
              android:text="*"
              android:layout_width="15dp"
              android:layout_height="15dp" />
          <EditText
              android:background="@color/white"
              android:id="@+id/ed_store_name"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:hint="收货人姓名"
              android:padding="5dp"
              android:textColor="@color/bg_black"
              android:textColorHint="@color/tljr_text_tishi"
              android:textCursorDrawable="@drawable/edittextcursor"
              android:textSize="15sp" />

      </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
            <LinearLayout
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="*"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:background="@color/white"
                    android:maxLength="11"
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="联系电话"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textColor="@color/bg_black"
                    android:textColorHint="@color/tljr_text_tishi"
                    android:textCursorDrawable="@drawable/edittextcursor"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />

            <!--选择国家和城市-->
            <RelativeLayout
                android:paddingLeft="10dp"
                android:id="@+id/relative_province"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="*"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_toRightOf="@+id/tv1"
                    android:id="@+id/t_province"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:hint="请选择国家"
                    android:padding="5dp"
                    android:textColor="@color/hwg_text2"
                    android:textColorHint="@color/tljr_text_tishi"
                    android:textCursorDrawable="@drawable/edittextcursor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/c_shop_global_icon_normal" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />

            <com.abcs.huaqiaobang.tljr.zrclistview.ZrcListView
                android:id="@+id/zlist_province"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative_province"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#99ffffff"
                android:visibility="gone">

            </com.abcs.huaqiaobang.tljr.zrclistview.ZrcListView>

            <RelativeLayout
                android:paddingLeft="10dp"
                android:id="@+id/relative_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="*"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_centerVertical="true"
                    android:id="@+id/t_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="请选择城市"
                    android:padding="5dp"
                    android:textColor="@color/hwg_text2"
                    android:textColorHint="@color/tljr_text_tishi"
                    android:textCursorDrawable="@drawable/edittextcursor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/c_shop_global_icon_normal" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
            <com.abcs.huaqiaobang.tljr.zrclistview.ZrcListView
                android:id="@+id/zlist_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative_city"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#99ffffff"
                android:visibility="gone">

            </com.abcs.huaqiaobang.tljr.zrclistview.ZrcListView>
      <LinearLayout
          android:paddingLeft="10dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">

          <TextView
              android:gravity="center"
              android:textColor="@color/red"
              android:text="*"
              android:layout_width="15dp"
              android:layout_height="15dp" />
          <EditText
              android:background="@color/white"
              android:id="@+id/ed_address"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:hint="详细地址"
              android:padding="5dp"
              android:textColor="@color/bg_black"
              android:textColorHint="@color/tljr_text_tishi"
              android:textCursorDrawable="@drawable/edittextcursor"
              android:textSize="15sp" />

      </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />

            <EditText
                android:id="@+id/ed_youbian"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="邮编"
                android:paddingLeft="10dp"
                android:textColor="@color/hwg_text2"
                android:textColorHint="@color/tljr_text_tishi"
                android:textCursorDrawable="@drawable/edittextcursor"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
            <EditText
                android:visibility="gone"
                android:id="@+id/ed_phone_beiyong"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="固定电话（备用）"
                android:paddingLeft="10dp"
                android:textColor="@color/hwg_text2"
                android:textColorHint="@color/tljr_text_tishi"
                android:textCursorDrawable="@drawable/edittextcursor"
                android:textSize="15sp" />
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
            <EditText
                android:visibility="gone"
                android:maxLength="11"
                android:id="@+id/ed_my_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="手机"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/hwg_text2"
                android:textColorHint="@color/tljr_text_tishi"
                android:textCursorDrawable="@drawable/edittextcursor"
                android:textSize="15sp" />
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
            <EditText
                android:visibility="gone"
                android:maxLength="11"
                android:inputType="number"
                android:id="@+id/ed_my_phone_beiyong"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="手机（备用）"
                android:paddingLeft="10dp"
                android:textColor="@color/hwg_text2"
                android:textColorHint="@color/tljr_text_tishi"
                android:textCursorDrawable="@drawable/edittextcursor"
                android:textSize="15sp" />

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <View
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/bg_black"
                    android:text="设置默认地址"
                    android:textCursorDrawable="@drawable/edittextcursor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:id="@+id/btn_isdefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/iv_sele_l"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <LinearLayout
                    android:background="@drawable/img_hwg_kuang_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="#ff0106"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="华人邦货行送货提醒您填写正确店铺信息"/>
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#aaaaaa"/>
                    <TextView
                        android:id="@+id/tv_xinxin"
                        android:textColor="#151515"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. 带*的信息必填"/>
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#aaaaaa"/>
                    <TextView
                        android:id="@+id/tv_jialing"
                        android:textColor="#151515"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. 固定电话开头请加‘0’"/>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>





</RelativeLayout>