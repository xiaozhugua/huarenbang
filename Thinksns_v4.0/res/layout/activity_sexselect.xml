<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_style"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="请选择性别"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_style2">


        <RadioButton
            android:id="@+id/my_sex_rbMan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:drawableLeft="@drawable/my_sex_img_man"
            android:text="男"
            android:textColor="@color/default_text"
            android:textSize="19sp" />


        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/orange" />


        <RadioButton
            android:id="@+id/my_sex_rbWomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/line"
            android:drawableLeft="@drawable/my_sex_img_women"
            android:text="女"
            android:textColor="@color/default_text"
            android:textSize="19sp" />

    </RelativeLayout>

</LinearLayout>