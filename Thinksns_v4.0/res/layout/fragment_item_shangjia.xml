<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:layout_height="match_parent">

<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:paddingLeft="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/linear_location"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/img_huohang_n_location"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Resddasfdfasdff"
                    android:textSize="16sp"

                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_phone"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <View
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_huohang_n_line"
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"></View>

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_huohang_n_phone"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:id="@+id/linear_laba"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_huohang_n_laba"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/tv_location_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="你好"
                    android:maxLines="1"
                    android:textSize="16sp"

                    />
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_huohang_n_to"
                android:layout_width="10dp"
                android:layout_height="10dp" />

        </LinearLayout>

        <LinearLayout

            android:paddingLeft="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/linear_server"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/img_huohang_n_peisong"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_peisong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送服务"
                android:textSize="16sp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:id="@+id/linear_shijian"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/img_huohang_n_shijian"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送时间：12:00"
                android:textSize="16sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_shangjia_server"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:src="@drawable/img_huohang_n_server"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_shangjia_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家服务"
                    android:textSize="16sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_fapiao"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:src="@drawable/img_huohang_n_paio"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_fapiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="可开发票"
                    android:textSize="16sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_huodao"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:src="@drawable/img_huohang_n_huo"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_huodaofukuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="货到付款"
                    android:textSize="16sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:id="@+id/linear_acty"
            android:layout_marginTop="1dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<include layout="@layout/item_huohang_acty" />-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>


</LinearLayout>