<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/mainclick_selector"
        android:id="@+id/rela_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_logo"
            android:layout_margin="10dp"
            android:src="@drawable/iv_yule_jian"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="16sp"
            android:id="@+id/tv_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="神庙逃亡2" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_above="@+id/processbar"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="14sp"
            android:id="@+id/tv_des"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8M | 60M" />


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="3dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="70"
            android:id="@+id/processbar"
            android:background="@drawable/default_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_logo"
            >

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/relative_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/iv_yule_delete_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>


</LinearLayout>