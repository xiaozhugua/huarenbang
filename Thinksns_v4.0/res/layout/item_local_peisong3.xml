<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:id="@+id/img_logo"
            android:layout_width="66dp"
            android:layout_height="66dp"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_logo"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:textColor="#434343"
                    tools:text="天赐饭店"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                   />

                <TextView
                    android:gravity="left"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_en_title"
                    android:textColor="#999999"
                    tools:text="tiacasnycasasycas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/tv_store"
                    android:textColor="#999999"
                    android:text="货号20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/tv_price"
                        tools:text="€ 9.00B"
                        android:textColor="@color/colorPrimaryDark2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:id="@+id/tv_sui"
                        tools:text="€9/00"
                        android:textSize="14sp"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:visibility="gone"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_gravity="right"
                android:id="@+id/id_flowlayout"
                zhy:max_select="-1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
              >
            </com.zhy.view.flowlayout.TagFlowLayout>

            <GridView
                android:visibility="gone"
                android:layout_gravity="right"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:gravity="top"
                android:scrollbars="none"
                android:numColumns="2"
                android:verticalSpacing="5dp"
                android:id="@+id/liner_tag"
                android:layout_width="85dp"
                android:layout_height="wrap_content"></GridView>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_tianjai"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:visibility="gone"
                android:id="@+id/ivGoodsMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_huohang_n_jian"
              />

            <TextView
                android:textColor="#333333"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/tvGoodsSelectNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/ivGoodsAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_huohang_n_add"
               />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:gravity="left"
        android:layout_marginTop="3dp"
        android:id="@+id/liner_hdong"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <View
        android:layout_marginTop="3dp"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    </LinearLayout>


