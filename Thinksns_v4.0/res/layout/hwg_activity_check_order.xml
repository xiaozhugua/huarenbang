                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/relative_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/click_bj">

                    <TextView
                        android:id="@+id/t_invoice"
                        android:layout_width="match_parent"
