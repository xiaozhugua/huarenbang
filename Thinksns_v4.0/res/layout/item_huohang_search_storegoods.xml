<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_store"
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <RelativeLayout
            android:layout_marginRight="8dp"
            android:id="@+id/relative_logo"
            android:layout_width="85dp"
            android:layout_height="match_parent">
            <View
                android:layout_alignParentLeft="true"
                android:background="#e5e5e5"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"></View>
            <View
                android:layout_alignParentRight="true"
                android:background="#e5e5e5"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"></View>
            <View
                android:layout_alignParentTop="true"
                android:background="#e5e5e5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <View
                android:layout_alignParentBottom="true"
                android:background="#e5e5e5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <ImageView
                android:scaleType="fitXY"
                android:layout_margin="1.5dp"
                android:layout_centerInParent="true"
                android:id="@+id/img_logo"
                android:src="@color/action_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relative_logo"
            android:id="@+id/tv_store_name"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仟惠仁"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relative_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_store_goods_num"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150件商品"/>
            <View
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/line_center"
                android:layout_centerInParent="true"
                android:background="#f4f4f4"
                android:layout_width="1dp"
                android:layout_height="10dp"></View>
            <TextView
                android:id="@+id/tv_store_sale_num"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售285"/>
        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/relative_logo"
            android:id="@+id/tv_store_peisong"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费配送"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="93dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:id="@+id/linear_acty"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:paddingRight="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/liner_huodong_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_huodong_num"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3个活动"/>

            <ImageView
                android:id="@+id/img_down_up"
                android:src="@drawable/img_huohang_n_downn"
                android:layout_width="12dp"
                android:layout_height="10dp" />
        </LinearLayout>

    </RelativeLayout>


    <com.abcs.haiwaigou.view.MyListView
        android:layout_marginLeft="93dp"
        android:layout_marginTop="10dp"
        android:id="@+id/m_listview_goods"
        android:cacheColorHint="@color/hintColor"
        android:listSelector="@color/hintColor"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.abcs.haiwaigou.view.MyListView>
</LinearLayout>