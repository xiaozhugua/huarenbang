<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ke_cheng_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abcs.education.KeChengDetialsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_top_main"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:id="@+id/rel_top"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="158dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:layout_margin="15dp"
                    android:id="@+id/logo"
                    android:src="@drawable/default_image"
                    android:layout_width="90dp"
                    android:layout_height="120dp" />

                <RelativeLayout
                    android:layout_toRightOf="@+id/logo"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_name"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="亲自攻读浮世绘"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_kecheng_count"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:text="23人关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_can_read"
                        android:layout_below="@+id/tv_kecheng_count"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:text="播放：1234 | 关注：1232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/rel_chat"
                        android:background="@drawable/btn_chat_send"
                        android:layout_width="80dp"
                        android:layout_height="30dp">

                        <TextView
                            android:gravity="center"
                            android:drawableLeft="@drawable/edu_messge"
                            android:drawablePadding="5dp"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="缓存"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/rel_guanzhu"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rel_chat"
                        android:background="@drawable/btn_chat_send"
                        android:layout_width="80dp"
                        android:layout_height="30dp">

                        <TextView
                            android:gravity="center"
                            android:drawableLeft="@drawable/edu_guanzhu_defa"
                            android:drawablePadding="5dp"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="关注"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rel_top"
                android:background="@color/lightBg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="课程目录"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="共14节课"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    android:scrollbars="none"
                    />

                <View
                    android:background="@color/line"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>

                <TextView

                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="课程简介"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:background="@color/line"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="讲师介绍"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <com.abcs.haiwaigou.view.MyListView
                    android:dividerHeight="0dp"
                    android:divider="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/my_listview"
                    android:cacheColorHint="@color/transparent"
                    android:listSelector="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.abcs.haiwaigou.view.MyListView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/back"
                android:text="返回"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="课程详情"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/edu_share_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
