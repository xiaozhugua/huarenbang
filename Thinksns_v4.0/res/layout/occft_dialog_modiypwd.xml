<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/circle_style"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:maxLength="20"
        android:id="@+id/tljr_mdy_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_theme"
        android:digits="@string/type_limit"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:textColor="@color/tljr_balck"
        android:textColorHint="@color/tljr_text_tishi"
        android:textCursorDrawable="@drawable/edittextcursor">

        <requestFocus />
    </EditText>

    <EditText
        android:singleLine="true"
        android:maxLength="20"
        android:id="@+id/tljr_mdy_n_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_theme"
        android:digits="@string/type_limit"
        android:hint="请输入新的密码"
        android:inputType="textPassword"
        android:textColor="@color/tljr_balck"
        android:textColorHint="@color/tljr_text_tishi"
        android:textCursorDrawable="@drawable/edittextcursor" />

    <EditText
        android:singleLine="true"
        android:maxLength="20"
        android:id="@+id/tljr_mdy_n_rpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_theme"
        android:digits="@string/type_limit"
        android:hint="请确认输入新的密码"
        android:inputType="textPassword"
        android:textColor="@color/tljr_balck"
        android:textColorHint="@color/tljr_text_tishi"
        android:textCursorDrawable="@drawable/edittextcursor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_click"
            android:text="取消"
            android:textColor="@color/white" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_click"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
