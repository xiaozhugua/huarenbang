<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hwg_bg"
    tools:context="com.abcs.haiwaigou.local.activity.HireAndFindActivity">

    <RelativeLayout
        android:id="@+id/relative_huohang_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/activity_new_huo_hang"></include>


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_bottom_bendipeisong"
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_peisong_gfw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"
                    android:textColor="@color/white"
                    android:text="购物车为空"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/re_peisong_jie"
                    android:background="@drawable/bg_bottom_psong_jie_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/tv_peisong_qisong"
                        android:textColor="@color/white"
                        android:text="€0.00"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/huohang_cart_default"
                android:id="@+id/re_che"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/img_peisong_che"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_peisong_number"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right|top"
                    android:background="@drawable/yuan_red"
                    android:gravity="center"
                    tools:text="14"
                    android:textColor="@color/white"
                    android:textSize="10sp"

                    />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_no_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/t_select"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_hwg_kuang_dark"
                android:gravity="center"
                android:padding="8dp"
                android:text="点击重新加载" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
