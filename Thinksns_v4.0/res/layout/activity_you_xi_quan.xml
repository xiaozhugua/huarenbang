<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_you_xi_quan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abcs.yule.YouXiQuanActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/back"
                android:text="返回"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="神庙逃亡2游戏圈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/retil_more"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/iv_yule_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/top"
        android:background="@color/transparent"
        android:id="@+id/rela_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_logo_big"
            android:src="@drawable/iv_yule_jian"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_logo"
            android:layout_margin="10dp"
            android:src="@drawable/iv_yule_jian"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="14sp"
            android:id="@+id/tv_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="神庙逃亡2" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textSize="14sp"
            android:id="@+id/tv_des"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="话题123 关注123" />

        <RelativeLayout
            android:background="@drawable/in_yule_search2"
            android:id="@+id/retil_search"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp">


        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>


    <ListView
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:id="@+id/listview"
        android:layout_below="@+id/rela_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <ImageView
        android:id="@+id/iv_send_huati"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/iv_yule_tianjiahuati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
