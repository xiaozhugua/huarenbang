<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cart_item_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_goods"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="12dp"
                 />

            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/t_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="潮诺聚合物苹果移动电源5s充电宝10000毫安以上通用三星小米 金色 天书"
                    android:textColor="@color/hwg_text2"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/t_goods_name"
                    android:layout_below="@+id/t_goods_name"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/t_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/t_goods_name"
                        android:layout_below="@+id/t_goods_name"
                        android:text="￥99.00"
                        android:textColor="@color/hwg_text2"
                        android:textSize="15sp" />

                    <TextView
                        android:textColor="@color/hwg_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="X" />

                    <TextView
                        android:textColor="@color/hwg_text2"
                        android:id="@+id/t_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/t_goods_name"
                    android:layout_below="@+id/linearLayout1"
                    android:gravity="center_vertical">

                    <TextView
                        android:textColor="@color/hwg_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品评分：" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/comment2RatingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/subscribe_seperate_line" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ed_comment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@null"
        android:gravity="start"
        android:hint="长度在1~200字之间，写下购物体会，可以为其他小伙伴提供参考~"
        android:maxLength="200"
        android:padding="8dp"
        android:textColor="@color/hwg_text2"
        android:textColorHint="@color/tljr_text_tishi"
        android:textCursorDrawable="@drawable/edittextcursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/subscribe_seperate_line" />

</LinearLayout>