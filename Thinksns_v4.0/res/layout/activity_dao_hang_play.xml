<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:id="@+id/inf"
        android:layout_width="match_parent"
        android:layout_height="?attr/TitleHeight">

        <ImageView
            android:id="@+id/img_back"
            android:padding="5dp"
            android:layout_margin="@dimen/dimen_15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back2_yuyin"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_title"
            android:textSize="?attr/TitleTextSize"
            android:textColor="@color/bg_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="invisible"
            android:background="@drawable/share"
            android:id="@+id/tv_mune_right"
            android:textSize="@dimen/dimen_30sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="35dp"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_name_zh"
            android:textSize="@dimen/dimen_30sp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/bg_white"
            android:layout_marginLeft="10dp"
            android:text=""
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tv_name_zh"
            android:id="@+id/tv_name_en"
            android:textSize="@dimen/dimen_25sp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/bg_white"
            android:layout_marginLeft="10dp"
            android:text=""
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:scaleType="centerCrop"
        android:src="@drawable/img_huaqiao_default"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/play"
            android:src="@drawable/play3_yuyin"
            android:padding="5dp"
            />
        <TextView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bg_white"
            android:text=""
            android:layout_below="@+id/play"
            android:id="@+id/tv_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
